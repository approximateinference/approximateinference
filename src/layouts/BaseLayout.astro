---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import { siteConfig } from "@/site-config";

const { title } = Astro.props;
---

<html lang={siteConfig.lang} class=''>
  <head>
    <BaseHead title={title} />
  </head>

  <body class='m-auto flex max-w-[50rem] justify-center bg-background'>
    <ThemeProvider />

    <div class='flex min-h-screen w-full flex-col items-center font-sans'>
      <Header />

      <div class='relative w-full bg-black pb-10 sm:h-[25rem]'>
        <div
          class="absolute inset-0 h-full bg-[url('/images/singapore_219.jpg')] bg-cover bg-center opacity-80 blur-[0px] dark:opacity-80 md:bg-[url('/images/singapore_219.jpg')]"
        >
        </div>

        <div
          class='text-shadow-sm relative z-10 mx-auto my-5 px-5 pt-0 text-center font-display text-white text-shadow-blur-xl'
        >
          <h1 class='text-5xl font-bold'><a href='/'>AABI 2025</a></h1>
          <h2 class='text-xl font-semibold'>
            7th Symposium on Advances of Approximate Bayesian Inference
          </h2>
          <p class='text-lg'>Co-located with ICLR 2025 in Singapore</p>
          <p class='text-lg'>Tuesday, 29 April 2025</p>
        </div>
      </div>

      <div class='w-[97.5%]'>
        <p class='text-right text-xs text-gray-400 dark:text-gray-500'>
          Image by <a
            href='https://www.goodfon.com/city/wallpaper-singapore-marina-bay-sands-3170.html'
            class='underline'>Jenty</a
          >
        </p>
      </div>

      <main class='relative w-full pb-0 pt-10 leading-relaxed'>
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
